<div class = "row normal-form" id = "signin_wrapper">
  <div class = "row">
    <h3><%= t(".sign_in") %></h3>
  </div>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "user-form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class = "row">
      <div class = "col-md-6">
        <div class = "row">
          <%= f.label :email %>
        </div>
        <div class = "row">
          <%= f.text_field :email, :autofocus => true, :class => "form-control" %>
        </div>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-6">
        <div class = "row">
          <%= f.label :password %>
        </div>
        <div class = "row">
          <%= f.password_field :password, :class => "form-control" %>
        </div>
      </div>
    </div>

    <br/>
    <div class = "row">
      <%= f.submit t(".sign_in"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>