<div class="row">
  <div class="col-md-6">
    <%= image_tag("logo.jpeg", :size => "150x100") %>
  </div>
  <div class="col-md-6 pull-right text-right">
    <% if current_user %>
      <%= link_to current_user.name, user_path(current_user) %>&nbsp;
      <%= link_to image_tag(current_user.avatar_url, size: "50x50"), user_path(current_user) %>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li class = "text-left"><%= link_to t(".sign_out"), destroy_user_session_path, method: "delete" %></li>
        </ul>
      </div>
    <% else %>
    <% end %>
  </div>
</div>